              "schema": {
                "type": "object",
                "required": ["video_uuid", "messsage"],
                "properties": {
                  "parent_uuid": {
                    "type": "string",
                    "description": "UUID of parent comment"
                  },
                  "video_uuid": {
                    "type": "string",
                    "description": "UUID of video to append the comment on"
                  },
                  "message": {
                    "type": "string",
                    "description": "Comment itself"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comment has been created",
